<div data-section-id="{{ section.id }}" data-section-type="contact">
  <div class="layout-content-wrapper">
    <div class="container">

      {% comment %}{% include 'page-header', title: section.settings.title %}{% endcomment %}

      <div class="u-margin-auto" style="max-width: 580px;">

        {% form 'contact' %}

          {% if form.posted_successfully? %}
            <p class="rte u-ta-center">
              {% if section.settings.success_message != blank %}
                {{ section.settings.success_message }}
              {% else %}
                {{ 'contact.form.post_success' | t }}
              {% endif %}
            </p>

          {% else %}

            <div class="u-ta-center">
              {{ section.settings.form_message | default: 'Please include as much information as possible to help us in assisting you.' }}
            </div>

            <br />          

            {% if form.errors %}
              <div class="alert alert-danger">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="form-group">
              <label for="ContactFormEmail" class="sr-only">{{ 'contact.form.email' | t }}</label>
              <input type="email"
                name="contact[email]"
                id="ContactFormEmail"
                class="form-control"
                placeholder="{{ 'contact.form.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off"
                data-input-email>
            </div>

            <div class="form-group">
              <label for="ContactFormOrder" class="sr-only">{{ 'contact.form.order_number' | t }}</label>
              <input type="text"
                name="contact[order number]"
                id="ContactFormEmail"
                class="form-control"
                placeholder="{{ 'contact.form.order_number' | t }} (Optional)"
                autocomplete="off"
                autocapitalize="off">
            </div>        

            <div class="form-group">
              <label for="ContactFormMessage" class="sr-only">{{ 'contact.form.message' | t }}</label>
              <textarea rows="6"
                name="contact[message]"
                id="ContactFormMessage"
                class="form-control"
                placeholder="{{ 'contact.form.message' | t }}" data-input-message>
                {%- if form.body -%}
                  {{ form.body }}
                {%- endif -%}
              </textarea>
            </div>

            <div class="u-ta-right">
              <input type="submit" class="btn btn-primary" value="{{ 'contact.form.send' | t }}">
            </div>          
          {% endif %}

        {% endform %}

        {% if page.content != blank %}
          <br />
          <div class="rte u-ta-center">{{ page.content }}</div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Contact Page",
    "settings": [
      {
        "id": "form_message",
        "type": "textarea",
        "label": "Form Message",
        "info": "Content at the top of the form"
      },
      {
        "id": "success_message",
        "type": "text",
        "label": "Success Message",
        "info": "Displays when someone submits the form successfully"
      }
    ]
  }
{% endschema %}
